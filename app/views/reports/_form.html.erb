<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   
  <% end %>
  
  <div class = "label">
    <%= f.label :label%>
    <%= f.text_field :label%>
  </div>
  <div class = "tag_type" style = "display:none">
    <%= f.label :tag_type%>
    <%= f.select :tag_type, options_for_select(Report.tag_types.keys.to_a, @report.tag_type)%>
  </div>
  <div class = "email_label">
    <%= f.label "If you would like to be contacted by cluster support, leave your email below (optional):" %>
  </div>
  <div class = "email_textfield">
    <%= f.text_field :yale_email%>
  </div>
  <div class = "description_label">
    <%= f.label "Please enter a brief description of the issue or any error codes (optional):" %>
  </div>
  <div class = "description_textarea">
    <%= f.text_area :description%>
  </div>
  
  <div class="actions">
    <div class = "submit">
      <%= f.submit "Submit Report", disable_with: "Sending Report..." %>
    </div>
  </div>
<% end %>
